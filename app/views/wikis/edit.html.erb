<h1>Edit Wiki</h1>
<div class="row">
  <div class="col-md-4">
      <p>Guidelines for Wikis</p>
      <ul>
        <li>Give credit where credit is due.</li>
        <li>Foul language will not be tolerated.</li>
      </ul>
    </div>
    <div class="col-md-8">
      <%= form_for @wiki do |f| %>
      <div class="form=group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter Wiki Title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter markdown" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>


<% if policy(Wiki.new).create? %>
<div class="pull-right edit-button">
  <%= link_to "New Wiki", new_wiki_path(@wiki), class: 'btn btn-success' %>
</div>
<% end %>
<h1>All Wikis</h1>

<% @wikis.each do |wiki| %>
  <% if policy(wiki).show? %>
    <p><%= link_to (markdown_to_html wiki.title), wiki %></p>
  <% end %>
<% end %>